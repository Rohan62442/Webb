#!/bin/bash

if [[ \$USER = "root" || $(whoami) = "root" ]]; then
  echo "Error: Do not run this script as root"
  exit
fi
chmod +x "eppy"
mkdir -p "$HOME/.local/share/eppy"
mkdir -p "$HOME/.local/bin"
cp -rf * "$HOME/.local/share/eppy"
ln -sf "$HOME/.local/share/eppy/eppy" "$HOME/.local/bin/eppy"
echo "Installation successful"
