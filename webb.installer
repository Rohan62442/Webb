#!/usr/bin/env bash

if [[ \$USER = "root" || $(whoami) = "root" ]]; then
  echo "Error: Do not run this script as root"
  exit
fi
chmod +x "webb"
mkdir -p "$HOME/.local/share/webb"
mkdir -p "$HOME/.local/bin"
cp -rf * "$HOME/.local/share/webb"
ln -sf "$HOME/.local/share/webb/webb" "$HOME/.local/bin/webb"
echo "Installation successful"
